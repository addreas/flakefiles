{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#98C379",
          "style": "plain",
          "template": "\u279c",
          "type": "text"
        },
        {
          "foreground": "#BF616A",
          "style": "plain",
          "template": "{{ if gt .Code 0 }}\u2717{{else}} {{end}}",
          "properties": {
            "always_show": true
          },
          "type": "exit"
        },
        {
          "foreground": "#56B6C2",
          "properties": {
            "style": "letter"
          },
          "style": "plain",
          "template": " {{ .Path }} ",
          "type": "path"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#AEA4BF",
          "properties": {
            "style": "austin",
            "threshold": 150
          },
          "style": "plain",
          "template": "{{ .FormattedMs }} ",
          "type": "executiontime"
        },
        {
          "foreground": "#FC6D27",
          "properties": {
            "branch_icon": "<#666>\ue725</>"
          },
          "style": "plain",
          "template": "{{ .HEAD }}",
          "type": "git"
        },
        {
          "type": "kubectl",
          "parse_kubeconfig": true,
          "style": "plain",
          "foreground": "#3970e4",
          "template": " <#666>\ufd31</>{{.Context}}{{if .Namespace}}<#666>\uebbb</><#9db8e9>{{.Namespace}}</>{{end}}"
        },
        {
          "foreground": "#9B6BDF",
          "foreground_templates": [
            "{{if eq \"Charging\" .State.String}}#40c4ff{{end}}",
            "{{if eq \"Discharging\" .State.String}}#ff5722{{end}}",
            "{{if eq \"Full\" .State.String}}#4caf50{{end}}"
          ],
          "properties": {
            "charged_icon": "Â•",
            "charging_icon": " \u21e1",
            "discharging_icon": " \u21e3"
          },
          "style": "plain",
          "template": "{{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}",
          "type": "battery"
        }
      ],
      "type": "rprompt"
    }
  ],
  "final_space": true,
  "secondary_prompt": {
      "background": "transparent",
      "foreground": "#666",
      "template": "\u279c "
  },
  "version": 2
}
